  "main": "index.js",
  "scripts": {
    "build:cli": "tsc --noEmit  --downlevelIteration --target es2015 --moduleResolution node ./src/apps/cli.ts && esbuild ./src/apps/cli.ts --bundle --platform=node --format=cjs --outfile=dist/cli.js",
    "build:api": "tsc --noEmit  --downlevelIteration --target es2015 --moduleResolution node ./src/apps/api.ts && esbuild ./src/apps/api.ts --bundle --platform=node --format=cjs --outfile=dist/api.js",
    "start:api": "node ./dist/api.js"
  },
  "bin": {
    "crafty": "dist/cli.js"
  },
  "prisma": {
    "schema": "src/infra/prisma/schema.prisma"
  },
